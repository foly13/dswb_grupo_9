doctype html
html
  head
    title Editar Tarea
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    link(rel="stylesheet", href="/styles.css")
  body
    h1.text-center Editar Tarea
    form(action=`/tasks/${task.id}?_method=PUT`, method='POST')
      .form-group
        label(for='Tarea') Tarea
        input#Tarea.form-control(type='text', name='Tarea', value=task.Tarea, required)
      .form-group
        label(for='idResponsable') Responsable
        select#idResponsable.form-control(name='idResponsable', required)
          each user in users
            option(value=user.id, selected=task.idResponsable === user.id) 
              | #{user.nombre} (ID: #{user.id})
      .form-group
        label(for='Estado') Estado
        select#Estado.form-control(name='idEstado')
          each status in statuses
            option(value=status.id, selected=task.idEstado === status.id) #{status.nombre}
      .form-group
        label(for='Prioridad') Prioridad
        select#Prioridad.form-control(name='idPrioridad')
          each priority in priorities
            option(value=priority.id, selected=task.idPrioridad === priority.id) #{priority.nombre}
      button.btn.btn-primary(type='submit') Guardar Cambios

